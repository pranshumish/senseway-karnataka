<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SenseWay Karnataka"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnStartAssistant"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/start_assistant"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnTransportMode"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/transport_mode"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnWarningMode"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/warning_mode"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnAddDangerZone"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/add_danger_zone"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnEmergency"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/emergency"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/holo_red_dark" />

    <Button
        android:id="@+id/btnDescribeScene"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/describe_scene"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnIdentifyMoney"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/identify_money"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnEmergencyContact"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Emergency Contact"
        android:textSize="18sp" />

</LinearLayout>
